= javascript_include_tag 'calibrate'
State:
.row
%dl.row
  %dt.col-sm-1 Left_mm:
  %dd.col-sm-11#left-mm
  %dt.col-sm-1 Right_mm
  %dd.col-sm-11#right-mm
  %dt.col-sm-1 Left_deg
  %dd.col-sm-11#left-deg
  %dt.col-sm-1 Right_deg
  %dd.col-sm-11#right-deg
  %dt.col-sm-1 x
  %dd.col-sm-11#x
  %dt.col-sm-1 y
  %dd.col-sm-11#y
  %dt.col-sm-1 Running:
  %dd.col-sm-11#running
%hr
.row
  .col-6
    = render partial:'motor', locals: {motor: :left, belt_length: @left_mm}
  .col-6
    = render partial:'motor', locals: {motor: :right, belt_length: @right_mm}

%hr
.row
  .col-3
    %h5 Move to, mm, decart
    = form_tag move_path, class: 'mb-2' do
      .form-group
        =label_tag "X"
        =text_field_tag "x", '110.0', class: 'form-control'
      .form-group
        =label_tag "Y"
        =text_field_tag "y", '110.0', class: 'form-control'
      =submit_tag 'move to', class: 'btn btn-secondary mb-2'
%hr
